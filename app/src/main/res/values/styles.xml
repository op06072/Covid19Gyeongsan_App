<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextTheme">
        <item name="android:fontFamily">@font/nanumbarungothicbold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>

    </style>
    <style name="TextTheme2">
        <item name="android:fontFamily">@font/nanumbarungothicbold</item>
        <item name="android:textColor">#ffde00</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#000000</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashbg</item>
    </style>

</resources>
